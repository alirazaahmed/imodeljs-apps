{
  "extends": "./node_modules/@bentley/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./node_modules",
    // "esModuleInterop": true,
    "outDir": "./lib"
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "lib",
    "node_modules",
    "test"
  ]
}
